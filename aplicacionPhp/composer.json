{
    "name": "ejemplo/clima-app-php",
    "description": "AplicaciÃ³n de clima en PHP usando WeatherAPI",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Sistema de Ejemplo",
            "email": "ejemplo@test.com"
        }
    ],
    "require": {
        "php": ">=8.1",
        "guzzlehttp/guzzle": "^7.8",
        "vlucas/phpdotenv": "^5.5",
        "monolog/monolog": "^3.5"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5",
        "phpstan/phpstan": "^1.10",
        "squizlabs/php_codesniffer": "^3.8",
        "friendsofphp/php-cs-fixer": "^3.46"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test-coverage": "phpunit --coverage-html coverage",
        "phpstan": "phpstan analyse --level=8 src tests",
        "cs-check": "phpcs src tests --standard=PSR12",
        "cs-fix": "php-cs-fixer fix src tests",
        "lint": [
            "@phpstan",
            "@cs-check"
        ],
        "format": "@cs-fix",
        "start": "php -S 0.0.0.0:8080 -t public",
        "dev": "php -S localhost:8080 -t public"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "composer/package-versions-deprecated": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
